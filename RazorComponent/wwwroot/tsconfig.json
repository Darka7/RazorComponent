{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": false, 
    "target": "es5",
    "module": "None", 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "importHelpers": false,
    "lib": [ "ES5", "ES6", "ES7", "ES2015", "ES2016", "ES2017", "esnext", "dom", "dom.iterable" ],
    "typeRoots": [
      "Assets/@types"
    ]
  }

}
