@functions{
    public string RenderSiteMap(IEnumerable<LookupEntity<SiteMapEntity>> SiteMap)
    {
<ul>
    @foreach (var item in SiteMap)
    {

        @if (item.HasDetails || !item.Entity.HasSubMenu)
        {
            <li>@item.Entity.SiteMapName 
                @if (item.HasDetails)
                {
                    @RenderSiteMap(item.Details)
                }

            </li>
         }

    }

    </ul>

        return null;
    }
}



